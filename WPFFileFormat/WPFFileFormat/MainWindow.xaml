<Window x:Class="WPFFileFormat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFFileFormat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <RichTextBox x:Name="RtbPride" HorizontalAlignment="Left" Height="316" Margin="45,31,0,0" VerticalAlignment="Top" Width="264">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="Btnride" Content="Generate Pride" HorizontalAlignment="Left" Margin="75,378,0,0" VerticalAlignment="Top" Width="191" Click="Btnride_Click"/>
        <ListBox x:Name="LstBox" HorizontalAlignment="Left" Height="316" Margin="453,31,0,0" VerticalAlignment="Top" Width="261"/>
        <Button x:Name="BtnSales" Content="Generate Sales" HorizontalAlignment="Left" Margin="496,378,0,0" VerticalAlignment="Top" Width="191" Click="BtnSales_Click"/>
    </Grid>


</Window>
